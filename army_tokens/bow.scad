ep=.01;
round=1;
dia=25.4;
thick=3;
intersection()
{
    scale(.05)linear_extrude(height=50)translate([-305,-405,0])import("bow.dxf");
    translate([0,0,-(45-2)])sphere(r=45,$fn=100);
}
translate([0,0,-3+ep])difference()
{
